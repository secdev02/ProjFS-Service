<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <!-- Runtime configuration -->
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
    </startup>
    
    <!-- Application settings -->
    <appSettings>
        <!-- Root path for the virtual file system -->
        <!-- This is where the fake files will appear -->
        <add key="RootPath" value="C:\SecretsAppConfig" />
        
        <!-- DNS domain for sending alerts when files are accessed -->
        <!-- Replace with your own canary token domain if you have one -->
        <add key="AlertDomain" value="ADDCANARYTOKENHERE" />
        
        <!-- Enable debug mode for verbose console output -->
        <!-- Set to "true" for troubleshooting, "false" for production -->
        <add key="DebugMode" value="false" />
    </appSettings>
</configuration>
